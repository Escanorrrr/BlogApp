@page
@model BlogApp.Web.Pages.Account.EditModel
@{
    ViewData["Title"] = "Profil Düzenle";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-md-8">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group mb-3">
                    <label asp-for="UserUpdateDto.Email">Email</label>
                    <input asp-for="UserUpdateDto.Email" class="form-control" />
                    <span asp-validation-for="UserUpdateDto.Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label>Profil Fotoğrafı</label>
                    <input type="file" class="form-control" id="imageInput" accept="image/*" 
                           onchange="handleImageUpload(this, 'imagePreview', 'imageBase64Input')" />
                    <input type="hidden" id="imageBase64Input" asp-for="UserUpdateDto.ImageBase64" />
                </div>

                <div class="mb-3">
                    <img id="imagePreview" src="@Model.CurrentImagePath" class="img-thumbnail" 
                         style="max-width: 200px; @(string.IsNullOrEmpty(Model.CurrentImagePath) ? "display: none;" : "")" />
                </div>

                <button type="submit" class="btn btn-primary">Değişiklikleri Kaydet</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/imageUpload.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 