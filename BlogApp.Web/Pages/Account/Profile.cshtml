@page
@model Web.Pages.Account.ProfileModel
@{
    ViewData["Title"] = "Profil";
}

<div class="container mt-4">
    @if (Model.UserData != null)
    {
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card shadow">
                    <div class="card-body">
                        <div class="text-center mb-4">
                            @if (!string.IsNullOrEmpty(Model.UserData.ImagePath))
                            {
                                <img src="/images/@Model.UserData.ImagePath" alt="@Model.UserData.Username" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="bg-secondary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 150px; height: 150px;">
                                    <i class="fas fa-user fa-4x text-white"></i>
                                </div>
                            }
                            <h3 class="card-title">@Model.UserData.Username</h3>
                            @if (Model.IsAdmin)
                            {
                                <span class="badge bg-primary mb-3">Admin</span>
                            }
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="text-muted">Email</label>
                                    <p class="h6">@Model.UserData.Email</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="text-muted">Kayıt Tarihi</label>
                                    <p class="h6">@Model.UserData.CreatedAt.ToString("dd MMMM yyyy")</p>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="text-center">
                            <a href="/Account/Edit" class="btn btn-primary me-2">
                                <i class="fas fa-edit"></i> Profili Düzenle
                            </a>
                            <a href="/Blog/MyPosts" class="btn btn-outline-primary">
                                <i class="fas fa-book"></i> Yazılarım
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle me-2"></i>
            Kullanıcı bilgileri yüklenirken bir hata oluştu.
        </div>
    }
</div>

@section Styles {
    <style>
        .card {
            border: none;
            border-radius: 15px;
        }
        .badge {
            font-size: 0.9rem;
            padding: 0.5rem 1rem;
        }
    </style>
} 